<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="@android:style/Theme.Light.NoTitleBar" />

    <style name="AlertDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/popup_bg</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="TxtTheme">
        <item name="android:textSize">@dimen/txt</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TxtPresonLeft">
        <item name="android:textSize">@dimen/txt_xiao</item>
        <item name="android:textColor">#ff1e1e1e</item>
    </style>

    <style name="TxtPresonSettingLeft">
        <item name="android:textSize">@dimen/txt_xiao</item>
        <item name="android:textColor">@color/color_two_title_txt</item>
    </style>

    <style name="TxtPresonRight">
        <item name="android:textSize">@dimen/txt</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="cusProgressDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="packages" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="cusProgressDialog_has_dim" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="cusBottomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="BottomDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/dialog_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_out</item>
    </style>

    <style name="cusLargeHeadDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/headDialogAnimation</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="headDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/head_to_big</item>
        <item name="android:windowExitAnimation">@anim/head_to_small</item>
    </style>

    <style name="breedDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/dialog_breed_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_breed_out</item>
    </style>

    <style name="leftDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/dialog_left_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_left_out</item>
    </style>

</resources>